{% extends 'base.html.twig' %}

{% set body_attributes = {class: 'bg-secondary'} %}

{% block body_main %}

    <div class="body-content">

        <div class="text-bg-danger py-1 small">
            <div class="container">
                <div class="row row-cols-1 row-cols-md-2 align-items-center">
                    <div class="col mb-2">
                        <img src="{{ page_logo }}" height="30px">
                        <span class="ms-2">
                            {{ page_title }} Exception
                        </span>
                    </div>
                    <div class="col text-md-end">
                        <a href='#' class='text-light'>
                            <span class="ms-1">@Documentation</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-bg-light">
            <div class="container py-2">
                <div class="row row-cols-2 align-items-center">
                    <div class="col">
                        <span class='text-muted me-1 small'>HTTP</span>
                        <span class="display-6 text-danger fw-bold m-0">
                            {{ _exception.instance.code }}
                        </span>
                    </div>
                    <div class="col text-end small">
                        <p class="m-0">{{ _exception.statusText }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container py-2">

            <div class="col-12 my-3">
                <div class="card rounded-0">
                    <div class="card-header small">
                        {{ _exception.FQCN }} 
                    </div>
                    <div class="card-body text-danger">
                        {{ _exception.instance.message }}
                    </div>
                </div>
            </div>

            <div class='border p-2'>

                <div class="row justify-content-center">

                    <div class="col-lg-12 mb-2">
                        <div class="card rounded-0">
                            <div class="card-body small">
                                <div class="mb-3 fw-bold">
                                    Exception Trace <i class="bi bi-hourglass-split"></i>
                                </div>
                                <ul class='list-unstyled'>
                                    {% for trace in _exception.instance.trace %}
                                    <li>
                                        <div class="p-2 border">
                                            {{ trace.file }}:{{ trace.line }}
                                        </div>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>

                    {# <div class="col-lg-8">
                        <div class="card rounded-0">
                            <div class="card-body">
                                <pre class="bg-light p-3 m-0 border">{{ code }}</pre>
                            </div>
                        </div>
                    </div> #}

                </div> <!-- row -->

            </div>
        </div> <!-- container -->

    </div>

{% endblock %}